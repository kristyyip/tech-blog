{{#each posts}}
	<div class='card m-5 w-75 mx-auto' style='width: 18rem;'>
		<div class='card-body'>
			<h5 class='card-title'>{{title}}</h5>
			<h6 class='card-subtitle mb-2 text-muted'>Posted by {{user.username}} on {{format_date createdAt}}</h6>
			<p class='card-text'>{{content}}</p>
		</div>
	</div>
{{/each}}