<form class="m-5 w-75 mx-auto">
    <h3 class="my-5 text-center">Login</h3>
    <div class="mb-3 row">
        <label for="email" class="col-form-label col-sm-2">Email address</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" placeholder="name@example.com">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="inputPassword" class="col-form-label col-sm-2">Password</label>
        <div class="col-sm-10">
            <input type="password" id="password" minlength="10" class="form-control" aria-describedby="passwordHelpBlock">
        </div>
    </div>

    <div class="d-md-flex align-items-center justify-content-md-end">
        <a class="mx-3" href="/signup">Sign up instead</a>
        <button type="button" class="btn btn-dark" id="login">Login</button>
    </div>
</form>